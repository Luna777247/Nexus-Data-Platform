{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Tour",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "id": { "type": "string" },
    "name": { "type": "string" },
    "region": { "type": "string" },
    "price": { "type": "number" },
    "rating": { "type": "number" },
    "tags": {
      "type": "array",
      "items": { "type": "string" }
    }
  },
  "required": ["id", "name", "region", "price", "rating", "tags"]
}
