{
  "dashboard": {
    "id": null,
    "uid": "nexus-schema-registry",
    "title": "Nexus Data Platform - Schema Registry",
    "tags": ["nexus", "schema-registry", "kafka", "avro"],
    "timezone": "browser",
    "schemaVersion": 38,
    "version": 1,
    "refresh": "1m",
    "time": {
      "from": "now-6h",
      "to": "now"
    },
    "panels": [
      {
        "id": 1,
        "title": "üìö Registered Schemas Overview",
        "type": "stat",
        "gridPos": {
          "x": 0,
          "y": 0,
          "w": 6,
          "h": 4
        },
        "targets": [
          {
            "expr": "count(schema_registry_schema_count)",
            "refId": "A",
            "legendFormat": "Total Schemas"
          }
        ],
        "options": {
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"]
          },
          "orientation": "auto",
          "textMode": "value_and_name",
          "colorMode": "background",
          "graphMode": "none"
        },
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": null, "color": "blue"},
                {"value": 5, "color": "green"},
                {"value": 10, "color": "yellow"}
              ]
            },
            "unit": "short"
          }
        }
      },
      {
        "id": 2,
        "title": "‚úÖ Schema Validations (Success Rate)",
        "type": "stat",
        "gridPos": {
          "x": 6,
          "y": 0,
          "w": 6,
          "h": 4
        },
        "targets": [
          {
            "expr": "(1 - (rate(kafka_topic_partition_current_offset{topic=\"dlq_schema_validation_errors\"}[5m]) / (rate(kafka_topic_partition_current_offset{topic=~\".*\"}[5m]) + 0.001))) * 100",
            "refId": "A",
            "legendFormat": "Success Rate"
          }
        ],
        "options": {
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"]
          },
          "orientation": "auto",
          "textMode": "value_and_name",
          "colorMode": "background",
          "graphMode": "area"
        },
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": null, "color": "red"},
                {"value": 80, "color": "yellow"},
                {"value": 95, "color": "green"}
              ]
            },
            "unit": "percent",
            "min": 0,
            "max": 100
          }
        }
      },
      {
        "id": 3,
        "title": "üîÑ Schema Compatibility Checks",
        "type": "stat",
        "gridPos": {
          "x": 12,
          "y": 0,
          "w": 6,
          "h": 4
        },
        "targets": [
          {
            "expr": "rate(schema_registry_requests_total{operation=\"compatibility_check\"}[5m])",
            "refId": "A",
            "legendFormat": "Checks/sec"
          }
        ],
        "options": {
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"]
          },
          "orientation": "auto",
          "textMode": "value_and_name",
          "colorMode": "value",
          "graphMode": "area"
        },
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": null, "color": "green"}
              ]
            },
            "unit": "ops"
          }
        }
      },
      {
        "id": 4,
        "title": "‚ö° Schema Registry Latency",
        "type": "stat",
        "gridPos": {
          "x": 18,
          "y": 0,
          "w": 6,
          "h": 4
        },
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(schema_registry_request_duration_seconds_bucket[5m]))",
            "refId": "A",
            "legendFormat": "P95 Latency"
          }
        ],
        "options": {
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"]
          },
          "orientation": "auto",
          "textMode": "value_and_name",
          "colorMode": "background",
          "graphMode": "area"
        },
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": null, "color": "green"},
                {"value": 0.01, "color": "yellow"},
                {"value": 0.1, "color": "red"}
              ]
            },
            "unit": "s"
          }
        }
      },
      {
        "id": 5,
        "title": "üìä Schema Validation Errors Over Time",
        "type": "timeseries",
        "gridPos": {
          "x": 0,
          "y": 4,
          "w": 12,
          "h": 8
        },
        "targets": [
          {
            "expr": "rate(kafka_topic_partition_current_offset{topic=\"dlq_schema_validation_errors\"}[5m])",
            "refId": "A",
            "legendFormat": "Validation Errors/sec"
          }
        ],
        "options": {
          "tooltip": {
            "mode": "multi"
          },
          "legend": {
            "displayMode": "list",
            "placement": "bottom"
          }
        },
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            },
            "custom": {
              "lineWidth": 2,
              "fillOpacity": 20,
              "gradientMode": "opacity",
              "axisPlacement": "auto",
              "drawStyle": "line",
              "pointSize": 5
            },
            "unit": "msg/s",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": null, "color": "green"},
                {"value": 5, "color": "yellow"},
                {"value": 10, "color": "red"}
              ]
            }
          }
        }
      },
      {
        "id": 6,
        "title": "üéØ Schema Evolution Timeline",
        "type": "timeseries",
        "gridPos": {
          "x": 12,
          "y": 4,
          "w": 12,
          "h": 8
        },
        "targets": [
          {
            "expr": "schema_registry_schema_versions",
            "refId": "A",
            "legendFormat": "{{subject}}"
          }
        ],
        "options": {
          "tooltip": {
            "mode": "multi"
          },
          "legend": {
            "displayMode": "table",
            "placement": "bottom",
            "calcs": ["last", "max"]
          }
        },
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            },
            "custom": {
              "lineWidth": 2,
              "fillOpacity": 0,
              "gradientMode": "none",
              "axisPlacement": "auto",
              "drawStyle": "line",
              "pointSize": 8,
              "lineStyle": {
                "fill": "solid"
              }
            },
            "unit": "short"
          }
        }
      },
      {
        "id": 7,
        "title": "üìã Schema Registry Health",
        "type": "table",
        "gridPos": {
          "x": 0,
          "y": 12,
          "w": 12,
          "h": 6
        },
        "targets": [
          {
            "expr": "up{job=\"schema-registry\"}",
            "refId": "A",
            "format": "table",
            "instant": true
          }
        ],
        "options": {
          "showHeader": true
        },
        "fieldConfig": {
          "defaults": {
            "custom": {
              "align": "auto",
              "displayMode": "auto"
            }
          },
          "overrides": [
            {
              "matcher": {"id": "byName", "options": "Value"},
              "properties": [
                {
                  "id": "custom.displayMode",
                  "value": "color-background"
                },
                {
                  "id": "thresholds",
                  "value": {
                    "mode": "absolute",
                    "steps": [
                      {"value": null, "color": "red"},
                      {"value": 1, "color": "green"}
                    ]
                  }
                },
                {
                  "id": "mappings",
                  "value": [
                    {"type": "value", "options": {"0": {"text": "DOWN"}}},
                    {"type": "value", "options": {"1": {"text": "UP"}}}
                  ]
                }
              ]
            }
          ]
        },
        "transformations": [
          {
            "id": "organize",
            "options": {
              "renameByName": {
                "instance": "Instance",
                "Value": "Status"
              }
            }
          }
        ]
      },
      {
        "id": 8,
        "title": "üîç Top Schema Subjects",
        "type": "bargauge",
        "gridPos": {
          "x": 12,
          "y": 12,
          "w": 12,
          "h": 6
        },
        "targets": [
          {
            "expr": "topk(10, schema_registry_schema_count)",
            "refId": "A",
            "legendFormat": "{{subject}}"
          }
        ],
        "options": {
          "orientation": "horizontal",
          "displayMode": "gradient",
          "showUnfilled": true
        },
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "continuous-BlYlRd"
            },
            "unit": "short"
          }
        }
      }
    ],
    "templating": {
      "list": [
        {
          "name": "datasource",
          "type": "datasource",
          "query": "prometheus",
          "current": {
            "text": "Prometheus",
            "value": "Prometheus"
          }
        }
      ]
    }
  },
  "overwrite": true
}
