          "y": 17,
          "w": 12,
          "h": 6
        },
        "targets": [
          {
            "expr": "up",
            "refId": "A",
            "format": "table",
            "instant": true
          }
        ],
        "options": {
          "showHeader": true,
          "sortBy": [
            {
              "displayName": "Job",
              "desc": false
            }
