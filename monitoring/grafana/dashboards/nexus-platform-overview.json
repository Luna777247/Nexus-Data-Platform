    "panels": [
      {
        "id": 1,
        "title": "",
        "type": "text",
        "gridPos": {
          "x": 0,
          "y": 0,
          "w": 24,
          "h": 3
        },
        "options": {
          "mode": "markdown",
          "content": "# üöÄ Nexus Data Platform - Real-Time Monitoring\n\n**Tourism Events Processing Pipeline** | High Availability Architecture | Schema Registry & DLQ Integration\n\nLast Updated: {{__dashboard.name}} ‚Ä¢ Refresh: {{__dashboard.refresh}}"
        }
      },
      {
        "id": 2,
        "title": "üéØ System Health Score",
        "type": "gauge",
        "gridPos": {
          "x": 0,
          "y": 3,
          "w": 6,
          "h": 6
        },
        "targets": [
          {
            "expr": "(sum(up{job=~\"kafka.*\"}) / count(up{job=~\"kafka.*\"}) + sum(up{job=~\"postgres.*\"}) / count(up{job=~\"postgres.*\"}) + sum(up{job=\"minio\"}) / count(up{job=\"minio\"})) / 3 * 100",
            "refId": "A",
            "legendFormat": "Health Score"
          }
        ],
        "options": {
          "orientation": "auto",
          "showThresholdLabels": true,
          "showThresholdMarkers": true
        },
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": null, "color": "red"},
                {"value": 70, "color": "yellow"},
                {"value": 90, "color": "green"}
              ]
            },
            "unit": "percent",
            "min": 0,
            "max": 100
          }
        }
      },
      {
        "id": 3,
        "title": "üìä Data Pipeline Throughput",
        "type": "stat",
        "gridPos": {
          "x": 6,
          "y": 3,
          "w": 6,
          "h": 6
        },
        "targets": [
          {
            "expr": "sum(rate(kafka_topic_partition_current_offset{topic!~\"dlq.*\"}[5m]))",
            "refId": "A",
            "legendFormat": "Messages/sec"
          }
        ],
        "options": {
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"]
          },
          "orientation": "auto",
          "textMode": "value_and_name",
          "colorMode": "background",
          "graphMode": "area"
        },
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": null, "color": "blue"},
                {"value": 10, "color": "green"},
                {"value": 100, "color": "yellow"}
              ]
            },
            "unit": "msg/s"
          }
        }
      },
      {
        "id": 4,
        "title": "‚ö†Ô∏è Error Rate",
        "type": "stat",
        "gridPos": {
          "x": 12,
          "y": 3,
          "w": 6,
          "h": 6
        },
        "targets": [
          {
            "expr": "sum(rate(kafka_topic_partition_current_offset{topic=~\"dlq.*\"}[5m]))",
            "refId": "A",
            "legendFormat": "Errors/sec"
          }
        ],
        "options": {
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"]
          },
          "orientation": "auto",
          "textMode": "value_and_name",
          "colorMode": "background",
          "graphMode": "area"
        },
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": null, "color": "green"},
                {"value": 1, "color": "yellow"},
                {"value": 5, "color": "red"}
              ]
            },
            "unit": "msg/s"
          }
        }
      },
      {
        "id": 5,
        "title": "‚úÖ Data Quality Score",
        "type": "gauge",
        "gridPos": {
          "x": 18,
          "y": 3,
          "w": 6,
          "h": 6
        },
        "targets": [
          {
            "expr": "(1 - (sum(rate(kafka_topic_partition_current_offset{topic=~\"dlq.*\"}[5m])) / (sum(rate(kafka_topic_partition_current_offset[5m])) + 0.001))) * 100",
            "refId": "A",
            "legendFormat": "Quality Score"
          }
        ],
        "options": {
          "orientation": "auto",
          "showThresholdLabels": true,
          "showThresholdMarkers": true
