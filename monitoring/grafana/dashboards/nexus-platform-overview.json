      {
        "id": 6,
        "title": "üìà Kafka Cluster Status",
        "type": "timeseries",
        "gridPos": {
          "x": 0,
          "y": 9,
          "w": 12,
          "h": 8
        },
        "targets": [
          {
            "expr": "sum by (instance) (kafka_server_brokertopicmetrics_messagesin_total)",
